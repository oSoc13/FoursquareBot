<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
  <children>
    <VBox prefHeight="200.0" prefWidth="300.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
      <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
          <children>
            <Label text="Foursquare username:" />
            <TextField fx:id="textUsername" prefWidth="158.0" />
          </children>
          <padding>
            <Insets left="10.0" top="10.0" fx:id="x1" />
          </padding>
        </HBox>
        <HBox padding="$x1" prefHeight="100.0" prefWidth="200.0">
          <children>
            <Label text="Password:" />
            <Separator prefWidth="65.0" />
            <PasswordField fx:id="textPassword" prefWidth="157.9998779296875" />
          </children>
        </HBox>
        <HBox id="" fillHeight="false" prefHeight="37.0" prefWidth="300.0">
          <children>
            <Label fx:id="labelAccount" text="You are not logged in." />
          </children>
          <padding>
            <Insets left="10.0" fx:id="x2" />
          </padding>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
          <children>
            <Separator prefWidth="128.0" />
            <Button fx:id="buttonLogin" mnemonicParsing="false" prefWidth="158.0" text="Authenticate" />
          </children>
          <padding>
            <Insets top="5.0" />
          </padding>
        </HBox>
        <HBox padding="$x2" prefHeight="100.0" prefWidth="200.0">
          <children>
            <Label prefWidth="175.0" text="Check for network change every" />
            <ChoiceBox fx:id="choiceBoxMinutes" prefWidth="53.0">
              <items>
                <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Item 1" />
                  <String fx:value="Item 2" />
                  <String fx:value="Item 3" />
                </FXCollections>
              </items>
            </ChoiceBox>
            <Label prefWidth="65.0" text="minutes." translateX="5.0" />
          </children>
        </HBox>
      </children>
    </VBox>
  </children>
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
  </rowConstraints>
</GridPane>
